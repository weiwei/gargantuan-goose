---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"
import type React from "react";
import { Icon } from 'astro-icon/components';

interface Props {
	icon: string;
	data: string;
	title: string;
  change?: number
}

const { icon, data, title, change } = Astro.props;

---

<Card className="p-4">
	<CardContent>
	  <Icon name={icon} class="w-8 h-8" />
    <div class="text-2xl">{data}</div>
    <div>{title}</div>
    {change! > 0 && <div class="text-green-600">↑{change}</div>}
    {change! < 0 && <div class="text-red-600">↓{change}</div>}
	</CardContent>
</Card>